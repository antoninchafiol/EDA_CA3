@page "/drug"
@page "/"
@using CA3.Client.Pages

<MudPaper Outlined="true" Style="@($"color:{Theme.PaletteLight.Dark}; background:{Theme.PaletteLight.GrayLight};")">
    <MudText Align="MudBlazor.Align.Center" Typo="Typo.h3"> OpenFDA Drug Search</MudText>
    <MudText Align="MudBlazor.Align.Center" Typo="Typo.body1">(Usage: Enter the expected drug's name in the search bar or click the button to fetch an example)</MudText>
</MudPaper>

<div class="d-flex align-items-center">
    <MudTextField @bind-Value="textValue" Label="Expected drug name" Variant="Variant.Outlined" OnKeyDown="InvokeAsyncByKeyDown"></MudTextField>
    <MudButton OnClick="LoadDrugs" Disabled="@isLoading" Variant="Variant.Filled" Color="Color.Tertiary" class="ms-2" Size="Size.Large">
        @if (isLoading)
        {
            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
            <MudText Class="ms-2">Loading drugs</MudText>
        }
        else
        {
            <MudText>Search drugs</MudText>
        }
    </MudButton>
</div>


<br />

@if (drugs != null && drugs.Any())
{
    <MudTable Items="@drugs.AsQueryable()" Outlined="true" Dense="true" Hover="true" Bordered="true" Striped="true" Filter="new Func<FullDrug,bool>(FilterFunc1)">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Requested drugs</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="textSearchString" Placeholder="Filter" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Brand Name</MudTh>
            <MudTh>Generic Name</MudTh>
            <MudTh>Manufacturer Name</MudTh>
            <MudTh>Product Type</MudTh>
            <MudTh>Route of Administration</MudTh>
            <MudTh>Application Number</MudTh>
            <MudTh>Purpose</MudTh>
            <MudTh>Details</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Brand Name">@((context.Openfda.BrandName != null && context.Openfda.BrandName.Any()) ? string.Join(", ", context.Openfda.BrandName) : "Unknown")</MudTd>
            <MudTd DataLabel="Generic Name">@((context.Openfda.GenericName != null && context.Openfda.GenericName.Any()) ? string.Join(", ", context.Openfda.GenericName) : "Unknown")</MudTd>
            <MudTd DataLabel="Manufacturer Name">@((context.Openfda.ManufacturerName != null && context.Openfda.ManufacturerName.Any()) ? string.Join(", ", context.Openfda.ManufacturerName) : "Unknown")</MudTd>
            <MudTd DataLabel="Product Type">@((context.Openfda.ProductType != null && context.Openfda.ProductType.Any()) ? string.Join(", ", context.Openfda.ProductType) : "Unknown")</MudTd>
            <MudTd DataLabel="Route of Administration">@((context.Openfda.Route != null && context.Openfda.Route.Any()) ? string.Join(", ", context.Openfda.Route) : "Unknown")</MudTd>
            <MudTd DataLabel="Application Number">@((context.Openfda.ApplicationNumber != null && context.Openfda.ApplicationNumber.Any()) ? string.Join(", ", context.Openfda.ApplicationNumber) : "Unknown")</MudTd>
            <MudTd DataLabel="Purpose">@((context.Purpose != null && context.Purpose.Any()) ? string.Join(", ", context.Purpose).Replace("Purpose", "") : "Unknown")</MudTd>

            <MudTd>
                <MudButton Variant="Variant.Text" EndIcon="@((context.IsExpanded) ? @Icons.Material.Filled.ExpandLess : @Icons.Material.Filled.ExpandMore)" OnClick="() => ToggleExpansion(context)">
                </MudButton>
            </MudTd>
        </RowTemplate>
        <ChildRowContent>
            @if (context.IsExpanded)
            {
                <MudTd ColSpan="3">
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Active Ingredients:</MudText>
                        <MudText Inline="true" Typo="Typo.body2">@(string.Join("", context.Openfda.SubstanceName) ?? "Not stated")</MudText>
                    </MudPaper>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Indications & Usage: </MudText>
                        <MudText Inline="true" Typo="Typo.body2">@(string.Join("", context.Openfda.PharmClassCS) ?? "Not stated")</MudText>
                    </MudPaper>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Warnings: </MudText>
                        <MudText Inline="true" Typo="Typo.body2">@((context.Purpose != null && context.Purpose.Any()) ? string.Join(", ", context.Purpose) : "Unknown")</MudText>
                    </MudPaper>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Warnings and Precautions</MudText>
                        <MudText Inline="true" Typo="Typo.body2"></MudText>
                    </MudPaper>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Adverse Reactions</MudText>
                        <MudText Inline="true" Typo="Typo.body2"></MudText>
                    </MudPaper>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Dosage and Administration</MudText>
                        <MudText Inline="true" Typo="Typo.body2"></MudText>
                    </MudPaper>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Drug Interactions</MudText>
                        <MudText Inline="true" Typo="Typo.body2"></MudText>
                    </MudPaper>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Contraindications</MudText>
                        <MudText Inline="true" Typo="Typo.body2"></MudText>
                    </MudPaper>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Storage and Handling</MudText>
                        <MudText Inline="true" Typo="Typo.body2"></MudText>
                    </MudPaper>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudText Inline="true" Typo="Typo.body1">Manufacturer Contact Info</MudText>
                        <MudText Inline="true" Typo="Typo.body2"></MudText>
                    </MudPaper>
                </MudTd>
            }
        </ChildRowContent>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>


}
else if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <p style="color: red;">@errorMessage</p>
}

@code {

    @* Error loading drugs: Object reference not set to an instance of an object. *@

    // ---------------- START Variables ----------------
    // ================ API ============================
    [Inject]
    private DrugService service { get; set; } = default!;
    private List<FullDrug> drugs = new();
    private string? errorMessage;
    private bool isLoading = false;

    // ================ MUDBLAZOR ======================
    private string? textValue;
    private string? textSearchString = "";
    private MudTheme Theme = new MudTheme();

    // ---------------- END Variables ------------------


    // --------------- START Functions ----------------
    // =============== API ============================
    async Task LoadDrugs()
    {
        isLoading = true;
        errorMessage = null;
        textSearchString = "";
        try
        {
            drugs = await service.GetDrugsAsync(textValue);

        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading drugs: {ex.Message}";
            drugs = new();
        }
        finally
        {
            isLoading = false;
        }
    }


    // =============== MUDBLAZOR ======================
    private bool FilterFunc1(FullDrug element) => FilterFunc(element, textSearchString);
    private bool FilterFunc(FullDrug element, string searchString)
    { 
         bool res = false; 
         if (string.IsNullOrWhiteSpace(searchString)) 
             res = true; 
         if (string.Join("", element.Openfda.GenericName).Contains(searchString, StringComparison.OrdinalIgnoreCase)) 
             res = true; 
         return res;
    }
     private void ToggleExpansion(FullDrug drug) 
     { 
         drug.IsExpanded = !drug.IsExpanded; 
     } 
    private async void InvokeAsyncByKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isLoading)
        {
            await LoadDrugs();
        }
    }
    // ---------------- END Functions -----------------
}
